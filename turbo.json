{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": { "cache": false },
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**", "build/**"] },
    "lint": { "dependsOn": ["^lint"] },
    "test": { "dependsOn": ["^test"], "outputs": ["coverage/**"] },
    "format": { "cache": false }
  }
}
